import java.util.LinkedHashSet;
import java.util.Scanner;

public class StringOperationMain {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter a string: ");
        String input = scanner.nextLine();

        System.out.println("\nChoose an operation:");
        System.out.println("1. Add the string to itself");
        System.out.println("2. Replace characters at odd positions with '#'");
        System.out.println("3. Remove duplicate characters");
        System.out.println("4. Change characters at odd positions to uppercase");

        System.out.print("Enter your choice (1-4): ");
        int choice = scanner.nextInt();

        String result = performStringOperation(input, choice);
        System.out.println("\nResult: " + result);

        scanner.close();
    }

    public static String performStringOperation(String input, int choice) {
        switch (choice) {
            case 1:
                return input + input;

            case 2:
                StringBuilder sb1 = new StringBuilder();
                for (int i = 0; i < input.length(); i++) {
                    if (i % 2 == 0) {
                        sb1.append('#');
                    } else {
                        sb1.append(input.charAt(i));
                    }
                }
                return sb1.toString();

            case 3:
                LinkedHashSet<Character> set = new LinkedHashSet<>();
                for (char ch : input.toCharArray()) {
                    set.add(ch);
                }
                StringBuilder sb2 = new StringBuilder();
                for (char ch : set) {
                    sb2.append(ch);
                }
                return sb2.toString();

            case 4:
                StringBuilder sb3 = new StringBuilder();
                for (int i = 0; i < input.length(); i++) {
                    char ch = input.charAt(i);
                    if (i % 2 == 0) {
                        sb3.append(Character.toUpperCase(ch));
                    } else {
                        sb3.append(ch);
                    }
                }
                return sb3.toString();

            default:
                return "Invalid choice";
        }
    }
}
